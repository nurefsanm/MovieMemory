    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Movie Memory</title>
    <link rel="icon" href="~/res/little_logo.png" />

    <!-- Bootstrap core CSS -->
    <link href="~/startbootstrap-grayscale-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="~/startbootstrap-grayscale-gh-pages//vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/startbootstrap-grayscale-gh-pages/css/style.css" rel="stylesheet">

    <style>
        .body-content {
            min-height: 850px;
        }
        #page-top ul {
            list-style-type: none;
        }
        table .btn{
            padding: .75rem;
        }
        .table i {
            font-size: 15px;
        }
    </style>
</head>
<body id="page-top" class="bg-light">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark fixed-top" id="mainNav">
        <div class="container w-100">

            <a class="navbar-brand text-white" href="@Url.Action("Index", "Admin")">Movie Memory</a>

            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle btn btn-warning" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
                <div class="dropdown-menu bg-dark">
                    <a class="dropdown-item text-white" href="@Url.Action("Index", "Account")">Switch to User</a>
                    <div role="separator" class="dropdown-divider"></div>
                    <a class="dropdown-item text-white" href="@Url.Action("SignOut", "Home")">Sign out</a>
                </div>
            </div>

        </div>
    </nav>


    <div class="bg-light" style="height: 75px"></div>

    <div class="body-content container mt-5">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Footer -->
    <footer class="bg-light small text-center">
        <div class="container">
            Copyright &copy; Movie Memory 2019
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/startbootstrap-grayscale-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/startbootstrap-grayscale-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/startbootstrap-grayscale-gh-pages/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/startbootstrap-grayscale-gh-pages/js/grayscale.min.js"></script>

</body>
</html>

