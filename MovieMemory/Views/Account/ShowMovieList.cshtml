@using MovieMemory.Models
@model List<Movie>

@if (Model.Count == 0)
{
    <div class="my-2">No movie in this list...</div>
}
else
{
    <div class="card alert-secondary">
        <table class="table table-borderless">
        <thead class="card-header">
            <tr>
                <th class="border-bottom-0" scope="col">Poster</th>
                <th class="border-bottom-0" scope="col">Title</th>
                <th class="border-bottom-0" scope="col">Director</th>
                <th class="border-bottom-0" scope="col">Country</th>
                <th class="border-bottom-0" scope="col">Release Date</th>
                <th class="border-bottom-0" scope="col">IMDB Rating</th>
            </tr>
        </thead>
        <tbody class="card-body">

            @foreach (var m in Model)
            {
                <tr>
                    <td><img style="width: 50px; height:75px;" src="~/res/@m.Poster" alt="poster" /></td>
                    <td><a href="@Url.Action("MovieInfo", "Home", new { id = m.Id })" role="button">@m.Title</a></td>
                    <td>@m.Director</td>
                    <td>@m.Country</td>
                    <td>@m.ReleaseDate.ToString("yyyy")</td>
                    <td>@m.IMDBRating</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
}



