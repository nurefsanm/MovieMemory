@using MovieMemory.Models
@model User
@{
    ViewBag.Title = "ChangePassword";
}

<h2>Account Settings</h2>

<div class="row mt-5">
    <div class="col-md-12 order-md-1">
        <h4>Change Password</h4>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3 col-md-6 pl-0">
                <label for="password" class="control-label col-md-6">Old Password</label>
                <div>
                    @Html.Password("Password", null, new { @class = "form-control" })
                </div>
                <span class="text-danger">@ViewBag.oldPasswordErrorMessage</span>
            </div>

            <div class="form-group mb-3 col-md-6 pl-0" ">
                <label for="newpassword" class="control-label col-md-6">New Password</label>
                <div>
                    @Html.Password("Newpassword", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group mb-5 col-md-6 pl-0" ">
                <label for="repassword" class="control-label col-md-10">Reenter New Password</label>
                <div>
                    @Html.Password("Repassword", null, new { @class = "form-control" })
                </div>
                <span class="text-danger">@ViewBag.newPasswordErrorMessage</span>
            </div>

            <button class="btn btn-primary" type="submit">Save</button>
            @Html.ActionLink("Return to Settings", "Settings", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>